{% set extends = 'admin.html.twig' %}
{% set icon = 'fa fa-envelope' %}

{% embed '@PositibeCore/Grid/show.html.twig' %}
    {% block actions %}
        <a href="{{ path('positibe_template_preview', { 'id': template.id }) }}"
           class="btn btn-default btn-circle">
            <i class="fa fa-search"></i> Vista previa
        </a>
        {{ parent() }}
    {% endblock %}
    {% block content_body %}
        <h4>Nombre: {{ template.code }}</h4>
        <h4>Público: {% if template.public %}<i class="fa fa-check text-success"></i>{% else %}<i
                    class="fa fa-times text-muted"></i>{% endif %}</h4>
        <p></p>
        <h4>Eliminable: {% if template.deleteable %}<i class="fa fa-check text-success"></i>{% else %}<i
                    class="fa fa-times text-muted"></i>{% endif %}</h4>

        <h4>Creada <i class="fa fa-calendar"></i> {{ template.createdAt|localizeddate('long', 'none') }} </h4>

        <p></p>
        {#<h4>#}
        {#Availableroles</h4>#}

        {#<p>{{ template.availableRoles }}</p>#}
        <h4>Descripción:</h4>

        <p>{{ template.description }}</p>
        <h4>Asunto:
            <small>{{ template.subject }}</small>
        </h4>
        <p>{{ template.body | raw }}</p>
    {% endblock %}
{% endembed %}