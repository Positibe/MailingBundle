{% extends '@PositibeCmf/layout.html.twig' %}

    {% from '@PositibeCmf/_macros.html.twig' import pagination %}
    {% import '@PositibeCmf/_buttons.html.twig' as buttons %}

    {% block title %}Template{% endblock %}
    {% block subtitle %}Lista de Template{% endblock %}
    {% set menu_active = 'template' %}
    {% set content_menu = 'template' %}

    {% block breadcrumb_list %}
        <li>
            <i class="fa fa-angle-right"></i>
            <a href="{{ path('positibe_template_index') }}">Template</a>
        </li>
    {% endblock %}

    {% block content -%}
        <form action="" method="get" id="form_template_filter" name="criteria"></form>
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <p class="caption-subject font-green-sharp bold uppercase"><i class="fa "></i>Template
                    </p>
                </div>
                <div class="actions">
                    <a href="{{ path('positibe_template_create') }}"
                       class="btn btn-sm btn-default btn-circle"><i
                                class="fa
        fa-plus"></i> Crear nuevo Template</a>
                </div>
            </div>
            <div class="portlet-body">
                {{ pagination(templates) }}
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th style="width: 60px">No.</th>
                        <th>Nombre</th>
                        <th>Descripci√≥n</th>
                        <th>Subject</th>
                        <th>Public</th>
                        <th>Deleteable</th>
                        <th style="width: 95px">Acciones</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th>
                            <input class="input-sm form-control" form="form_template_filter" name="criteria[code]"
                                   value="{{ app.request.get('criteria').code | default() }}">
                        </th>
                        <th>
                            <input class="input-sm form-control" form="form_template_filter"
                                   name="criteria[description]"
                                   value="{{ app.request.get('criteria').description | default() }}">
                        </th>
                        <th>
                            <input class="input-sm form-control" form="form_template_filter" name="criteria[subject]"
                                   value="{{ app.request.get('criteria').subject | default() }}">
                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                        <th>
                            <div class="input-group-btn">
                                <button class="btn btn-sm yellow filter-submit margin-bottom" type="submit"
                                        form="form_template_filter"><i
                                            class="fa fa-search"></i> Filtrar
                                </button>
                            </div>
                        </th>
                    </tr>
                    {% set count = templates.maxPerPage * (templates.currentPage - 1) %}
                    {% for template in templates %}
                        <tr>
                            <td>{{ count + loop.index }}</td>
                            <td><a href="{{ path('positibe_template_update', { 'code': template.code }) }}">{{ template.code }}</a></td>
                            <td>{{ template.description }}</td>
                            <td>{{ template.subject }}</td>
                            <td>{% if template.public %}<i class="fa fa-check text-success"></i>{% else %}<i class="fa fa-times text-muted"></i>{% endif %}</td>
                            <td>{% if template.deleteable %}<i class="fa fa-check text-success"></i>{% else %}<i class="fa fa-times text-muted"></i>{% endif %}</td>
                            <td>
                                <div class="input-group">
                                    <a class="btn btn-default btn-xs"
                                       href="{{ path('positibe_template_show', { 'code': template.code }) }}"><i
                                                class="fa fa-search"></i> Detalles</a>
                                    <a class="btn btn-default btn-xs"
                                       href="{{ path('positibe_template_update', { 'code': template.code }) }}"><i
                                                class="fa fa-edit"></i> Editar</a>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">No hay elementos</td>
                        </tr>
                    {% endfor %}
                </table>
                {{ pagination(templates) }}
            </div>
        </div>

    {% endblock %}
